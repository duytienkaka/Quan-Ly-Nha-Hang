@model RestaurantMVC.Models.NhanVien

<form id="employeeForm">
    <div class="modal-header">
        <h5 class="modal-title">@((Model.MaNV == 0) ? "Thêm nhân viên" : "Cập nhật nhân viên")</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
    </div>
    <div class="modal-body">
        <div class="mb-3">
            <label>Họ tên</label>
            <input asp-for="HoTen" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Tên đăng nhập</label>
            <input asp-for="TenDangNhap" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Mật khẩu</label>
            <input asp-for="MatKhauBam" type="password" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Chức vụ</label>
            <input asp-for="ChucVu" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Vai trò</label>
            <select asp-for="VaiTro" class="form-select"
                    asp-items="Html.GetEnumSelectList<RestaurantMVC.Models.VaiTro>()"></select>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Lưu</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
    </div>
</form>

<script>
$("#employeeForm").submit(function(e){
    e.preventDefault();
    const formData = $(this).serialize();
    const url = "@(Model.MaNV == 0 ? "/Admin/CreateEmployee" : "/Admin/EditEmployee")";
    fetch(url, {method:"POST", headers:{'Content-Type':'application/x-www-form-urlencoded'}, body:formData})
        .then(() => {
            $("#employeeModal").modal('hide');
            $("#main-content").load("/Admin/ManageEmployees");
        });
});
</script>
