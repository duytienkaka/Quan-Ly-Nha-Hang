<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"] - Admin</title>
    <link rel="stylesheet" href="~/css/admin.css" />
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <aside class="sidebar">
            <h2>🍽 Admin Panel</h2>
            <ul>
                <li><a href="#" class="menu-link" data-url="/Admin/ManageTables">Quản lý bàn ăn</a></li>
                <li><a href="#" class="menu-link" data-url="/Admin/ManageFoods">Quản lý món ăn</a></li>
                <li><a href="#" class="menu-link" data-url="/Admin/ManageEmployees">Quản lý nhân viên</a></li>
                <!-- 👈 THÊM DÒNG NÀY -->
                <li><a href="#" class="menu-link" data-url="/Admin/IncomeReport">Báo cáo thu nhập</a></li>
                <li><a asp-controller="Account" asp-action="Logout">Đăng xuất</a></li>
            </ul>
        </aside>

        <!-- Nội dung -->
        <main id="main-content" class="flex-grow-1 p-4">
            @RenderBody()
        </main>
    </div>

    <script>
        $(function () {
            $('.menu-link').click(function (e) {
                e.preventDefault();
                $("#main-content").load($(this).data('url'));
            });
        });
    </script>
</body>

</html>